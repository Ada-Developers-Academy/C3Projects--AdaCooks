<h2>Home</h2>

<p>
  <%= link_to "Login", login_path, class: "btn btn-primary" %>
</p>

<!-- link to logout -->

<p>
  <%= link_to "Register", register_path, class: "btn btn-primary" %>
</p>

<% if session[:user_id] %>
  <p>
    <%= link_to "Dashboard",  dashboard_user_path(@user), class: "btn btn-primary" %>
  </p>
<% end %>

<!-- search bar -->

<h3>Recipes</h3>
<ul>
  <% @recipes.each do |recipe| %>
  <li><%= link_to recipe.name, recipe_path(recipe) %></li>
  <% end %>
</ul>

<h3>Ingredients</h3>
<ul>
  <% @ingredients.each do |ingredient| %>
  <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
  <% end %>
</ul>
