<h1>Yummaholics</h1>
<h4>Feed Your Food Addiction</h4>
<h3><%= session[:user_id] %></h3>
<div>
<% if session[:user_id].present? %>
  <%= link_to "View my Dashboard", user_dashboard_path(session[:user_id]), class: "btn btn-success" %>
<% end %>
</div>

<br>
<div class="row">
  <div class="col-md-4">
<%= link_to "Browse All Recipes", recipes_path, class: "btn btn-default" %>
<%= form_tag(recipes_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Recipes" %>
    <button class="btn" type="submit">Search</button>
  </div>
<% end %>
</div>
  <div class="col-md-4">
<%= link_to "Browse All Ingredients", ingredients_path, class: "btn btn-default"%>
<%= form_tag(ingredients_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
<div class="input-append">
<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Ingredients" %>
<button class="btn" type="submit">Search</button>
</div>
<% end %>
</div>

  <div class="col-md-4">
<%= link_to "Browse All Chefs", users_path, class: "btn btn-default"%>
<%= form_tag(users_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
<div class="input-append">
<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Chefs" %>
<button class="btn" type="submit">Search</button>
</div>
<% end %>
</div>
