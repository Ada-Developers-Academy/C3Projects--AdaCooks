<div class="container">

<h1>Welcome to Recipe Picker</h1>
<h2>The home for Recipes</h2>

<%= form_tag(recipes_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Recipes" %>
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>

<h2>Here are a few recipes to check out!</h2>
<div>
  <ul>
    <%= @recipes.each do |recipe| %>
      <li> <%= image_tag(recipe.image) %> </li>
      <li> <%= recipe.name %> </li>

      <li> <%= recipe.description %> </li>
    <% end %>
  </ul>
</div>
