<div class="jumbotron">
  <div class="container">
    <h1>Hambre</h1>
    <p>Â¿Tienes Hambre? Satisfy your cravings with our mouth-watering recipes.</p>
    <div class="form-group input-lg search">
      <%= form_tag({controller:'ingredients', action: 'search'}, method: :get, role: "search", class: "form-inline") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search by Ingredient", class: "form-control" %>
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
      <% end %>
    </div>
  </div>
</div>

<h3 class="center">Recipes</h3>
<div class="container center">
  <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="well">
        <%= image_tag(recipe.image, class: "img-thumbnail", size: "190x190") %>
        <p class="img-name"><%= link_to(recipe.name, recipe_path(recipe.id)) %></p>
        <p class="img-desc"><%= recipe.desc %></p>
      </div>
    </div>
  <% end %>
</div>

<!-- Ingredient images -->
<h3 class="center">Ingredients</h3>
<div class="container center">
  <% @ingredients.each do |ingredient| %>
    <div class="col-md-4">
      <div class="well">
        <%= image_tag(ingredient.image, class: "img-thumbnail", size: "190x190") %>
        <p class="img-name"><%= link_to(ingredient.name, ingredient_path(ingredient.id)) %></p>
      </div>
    </div>
  <% end %>
</div>


