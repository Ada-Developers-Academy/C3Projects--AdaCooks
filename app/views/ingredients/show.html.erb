<h2 class="txt-center"><%= @ingredient.name %></h2>
<%= image_tag @ingredient.image_url, class: "img-md img-circle img-center" %>

<br>

<% if session[:user_id] %>
  <% if session[:user_id] == @ingredient.user_id %>
    <%= link_to "Edit", edit_ingredient_path(@ingredient.id), class: "btn btn-default center-btn" %>
    <%= link_to "Delete", ingredient_path(@ingredient.id), class: "btn btn-default center-btn", :method => :delete %>
  <% end %>
<% end %>

<h4 class = "txt-center"><%= link_to "Return to Ingredients Index", ingredients_path, class: "btn btn-center" %></h4>

<% @recipes.each do |recipe| %>
<div class = "col-sm-4">
  <%= image_tag recipe.image_url, class: "img-board" %>
  <h5 class= "txt-center"><%= link_to  "#{recipe.name}", recipe_path(recipe.id) %></h5>
</div>
<% end %>
