<h1>Ingredient | <%= @ingredient.name %></h1>
<br>
<%= image_tag @ingredient.image_url, class: "display-img" %>

<h2> Recipes featuring <%= @ingredient.name %>: </h2>

<div class="row">
  <% @ingredient.recipes.each do |recipe| %>
    <div class="col-md-3 search_result_tiles">
      <%= link_to(image_tag(recipe.image_url(:thumb)), recipe_path(recipe.id)) %>
      <br>
      <h4><%=link_to "#{recipe.name}", recipe_path(recipe.id) %></h4>
    </div>
  <% end %>
</div>
