<div class="row">
  <div class="col-md-4 col-md-offset-2">
    <%= image_tag(@ingredient.image, class:"img-responsive img-rounded") %>
  </div>

  <div class="col-md-4">
    <h2><%= @ingredient.name.titlecase %></h2>
    <h3>Recipes</h3>
      <% @ingredient.recipes.each do |recipe| %>
      <p><%= link_to recipe.name.titlecase, recipe_path(recipe) %></p>
      <% end %>
  </div>
</div>
<!-- Users can only edit their own ingredients -can't test yet bc no login -->
<div class="row">
  <div class="col-md-3">
  <% if session[:user_id] == @ingredient.user_id %>
    <h4> <%= link_to "Edit Ingredient", edit_ingredient_path(@ingredient) %> </h4>
    <h4> <%= link_to "Delete Ingredient", ingredient_path(@ingredient), method: :delete, data: { confirm: "Are you sure?"} %> </h4>
  <% end %>
  </div>
</div>
