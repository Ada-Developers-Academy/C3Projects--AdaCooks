<%= link_to "Add New Ingredient", new_user_ingredient_path(session[:user_id]), class: "btn btn-primary" %>

<h1>My Ingredients</h1>

<table class="table table-striped table-hover">
  <th>Ingredients</th>
  <th>Edit</th>
  <th>Delete?</th>
<% @ingredients.each do |ingredient| %>
<tr>
  <td><%= link_to ingredient.name, ingredient_path(ingredient) %></td>

  <td><%= link_to "Edit", edit_user_ingredient_path(session[:user_id], ingredient.id), class: "btn btn-default "%></td>

  <td><%= link_to "Delete Ingredient", user_ingredient_path(session[:user_id], ingredient.id), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Back", dashboard_user_path(session[:user_id]), class: "btn btn-default" %>
