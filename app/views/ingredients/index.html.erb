<h1> This page has all the ingredients! </h1>

<%= form_tag(ingredients_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
<div class="input-append">
<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Ingredients" %>
<button class="btn" type="submit">Search</button>
</div>
<% end %>

<div class="container-fluid">
  <% @ingredients.each do |ingredient| %>
<div class="col-xs-6 col-md-4">
  <%= link_to(image_tag(ingredient.image_url(:thumb)), ingredient_path(ingredient)) %>
  <h4><%= ingredient.name %></h4>
</div>
<% end %>
</div>

<%   %>
<h4> Recipes You can find this in </h4>
<% @recipes.each do |recipe| %>
<%= link_to(image_tag(recipe.image_url(:thumb)), recipe_path(recipe.id)) %>

<%= recipe.name %>
<br>
<% end %>
