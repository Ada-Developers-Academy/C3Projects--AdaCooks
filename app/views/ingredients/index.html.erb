<h2> Ingredients Index </h2>

<% if @user %>
  <% if @user.id == @ingredient.user_id %>
    <%= link_to "+ Add an Ingredient", new_ingredient_path %>
  <% end %>
<% end %>

<table class = "table table-hover table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Image
      </th>
      <% if @user %>
        <% if @user.id == @ingredient.user_id %>
        <th>
          Edit
        </th>
        <th>
          Delete
        </th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.alphabetize.each do |ingredient| %>
      <tr>
        <td>
          <%= link_to ingredient.name, ingredient_path(ingredient.id) %>
        </td>
        <td>
          <%= image_tag ingredient.image_url, class: "img-circle img-sm" %>
        </td>
        <% if @user %>
          <% if @user.id == @ingredient.user_id %>
          <td>
            <%= link_to "Edit", edit_ingredient_path(@ingredient.id) %>
          </td>
          <td>
            <%= link_to "Delete", ingredient_path(@ingredient.id), :method => :delete %>
          </td>
          <% end %>
        <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
