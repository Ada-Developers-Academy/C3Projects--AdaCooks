<h1> Ingredients </h1>

<%= form_tag(ingredients_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Ingredients" %>
    <button class="btn" type="submit">Search</button>
  </div>
<% end %>

<div class="container-fluid">
  <% @ingredients.each do |ingredient| %>
    <div class="col-xs-6 col-md-4 search_result_tiles">
      <%= link_to(image_tag(ingredient.image_url(:thumb)), ingredient_path(ingredient)) %>
      <h4><%= link_to "#{ingredient.name}", ingredient_path(ingredient.id) %></h4>
    </div>
  <% end %>
</div>

<% if params[:search] %>
  <h4> Recipes Including "<%= params[:search] %>":</h4>
  <% @recipes.each do |recipe| %>
    <%= link_to(image_tag(recipe.image_url(:thumb)), recipe_path(recipe.id)) %>
    <%=link_to "#{recipe.name}", recipe_path(recipe.id) %>
  <% end %>
<% end %>
