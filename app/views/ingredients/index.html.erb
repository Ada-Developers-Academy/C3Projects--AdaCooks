<div class="container marketing">
  <h1>Ingredients</h1>
  <hr class="featurette-divider">

    <div class="row">
      <% @ingredients.each do |ingredient| %>
      <div class="col-lg-3">
        <p class="lead"><%= ingredient.name.capitalize %></p>
        <%= link_to ingredient_path(ingredient.id) do %>
          <% if ingredient.photo_url %>
            <%= image_tag ingredient.photo_url, class: "img-circle", size: '200x200'  %>
          <% elsif ingredient.image_url %>
            <%= image_tag ingredient.image_url, class: "img-circle", size: '200x200'  %>
          <% else %>
            <p>No image</p>
          <% end %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
