<h1>INGREDIENTS</h1>

<table class="table table-condensed table-striped">
  <tr>
    <th>Ingredient</th>
    <th># Recipes Used In</th>
  </tr>
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= link_to ingredient.name, ingredient_path(ingredient) %></td>
      <td><%= ingredient.recipes.count %></td>
    </tr>
  <% end %>
</table>
