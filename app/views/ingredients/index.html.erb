<div class="row form-header container-fluid">
  <div class="col-md-3 col-md-offset-4">
    <h2 class="text-center"> All Ingredients </h2>
    <h4 class="text-center">
    <% unless session[:user_id].nil? %>
      <%= link_to "Add a New Ingredient", new_ingredient_path %>
    <% end %>
    </h4>
    <table class="table table-bordered">
      <tr>
        <th>Image</th>
        <th>Ingredients</th>
      </tr>

    <% @ingredients.each do |ingredient| %>
      <tr>
        <td> <%= link_to image_tag(ingredient.image_url(:thumb), class: "img-rounded"), ingredient_path(ingredient) %></td>
        <td> <%= link_to ingredient.name.titlecase, ingredient_path(ingredient) %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
