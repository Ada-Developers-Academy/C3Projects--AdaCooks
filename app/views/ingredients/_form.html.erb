<%= form_for @ingredient, url: user_ingredient_path(@authenticated_user, @ingredient) do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>

    <div class="form-group">
      <%= f.label "Optional Image" %>
      <%= f.file_field :avatar %>
    </div>

    <br>

    <%= f.submit "Save Ingredient" class: "btn btn-primary" %>
  </fieldset>
<% end %>
