<%= form_for ingredient do |f| %>
  <div class="form-group">
    <%= f.label :name, required: true %>
    <%= f.text_field :name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "Save", { class: "btn btn-primary" } %>
<% end %>
