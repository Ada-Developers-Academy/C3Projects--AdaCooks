<div class="container marketing">
  <fieldset>
    <%= form_for @ingredient do |f| %>
      <%= f.label "Add a new ingredient:" %>
      <%= f.text_field :name, class: "form-control"%>

      <%= f.label :image %>
      <%= f.file_field :image %><br><br>

      <%= f.submit "Add ingredient", class: "btn btn-primary" %>
    <% end %>
  <fieldset>
</div>
