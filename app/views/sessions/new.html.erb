<h2>Sign In</h2>

<div class="row">
  <div class="col-md-3">
    <%= form_for :session, url: sessions_path do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
