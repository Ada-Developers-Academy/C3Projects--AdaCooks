<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h1>Sign In</h1>
    <% if flash.now[:error] %>
      <p class="errors"><%= flash.now[:error] %></p>
    <% end %>

    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control form-group' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control form-group' %>

      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>