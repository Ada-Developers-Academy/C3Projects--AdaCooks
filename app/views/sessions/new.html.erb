<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Sign in!</h3>
      </div>

      <div class="panel-body">
        <%= form_for :session, url: signin_path, role: "form", class: "form" do |f| %>
          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, placeholder: "enter username", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "enter password", class: "form-control" %>
          </div>

          <%= f.submit "Sign in", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
