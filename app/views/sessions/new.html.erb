<h2>Login</h2>

<%= form_for(:session, url: sessions_path) do |f| %>

	<!-- add +  style these errors and reformat phrase  -->

	<div class="form-group">
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>

	<div class="form-group">
		<%= f.label :password %>
		<%= f.text_field :password %>
	</div>

	<%= f.submit 'Log In', class: 'btn btn-primary' %>

<% end %>
