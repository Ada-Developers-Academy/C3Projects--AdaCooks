<!DOCTYPE html>
<html>
<head>
  <title>C3ProjectsAdacooks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid" id="main-container">
    <div class="row">
      <div class="col-lg-12">
        <header>
        <% unless session[:user_id] == nil %>
          <div class="account-buttons">
          <%= link_to "Logout", logout_path , method: :delete, class: "btn btn-default pull-right" %>
          </div>

        <% else %>

          <div class="account-buttons">
          <%= link_to "Login", login_path, class: "btn btn-primary" %>

          <%= link_to "Register!", register_path, class: "btn btn-default pull-right" %>
          </div>
          <% end %>
        </header>

        <nav class="navbar navbar-default">
          <div class="navbar-header">

            <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>
         </div>

         <ul class="nav navbar-nav navbar-right">
            <% if session[:user_id] %>
              <li><%= link_to "Dashboard", dashboard_user_path(session[:user_id]) %></li>
              <li><p class="navbar-text">Welcome, <%= @user.name %></p></li>
              <% else %>
              <li><p class="navbar-text">Welcome, <%= @user %> </li>
            <% end %>
          </ul>
        </div>

        </nav>

        <%= yield %>

      </div>
    </div>
  </div>

</body>
</html>
