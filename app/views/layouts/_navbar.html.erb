<li><%= link_to "Home", root_path %></li>
<%= form_for :search, url: root_path, :html => { :class => "form-inline" } do |f| %>
  <div class="form-group">
    <%= f.text_field :query, class: "form-control", placeholder: "Ingredient Name" %>
  </div>

  <%= f.submit "Search By Ingredient", class: "btn btn-default" %>
<% end %>
<li><%= link_to "Recipes", recipes_path %></li>
<li><%= link_to "Ingredients", ingredients_path %></li>

<% if @authenticated_user %>
  <li><%= link_to "Cookbooks", user_cookbooks_path(@authenticated_user) %></li>

  <!-- user contributions dropdown -->
  <li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
      Create New.. <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Cookbook", user_cookbooks_path(@authenticated_user) %></li>
      <li><%= link_to "Recipe", new_user_recipe_path(@authenticated_user) %></li>
      <li><%= link_to "Ingredient", new_user_ingredient_path(@authenticated_user) %></li>
    </ul>
  </li>

  <li><%= link_to "View Profile", user_path(@authenticated_user) %></li>
  <li><%= link_to "Logout", logout_path, method: "delete" %></li>
<% else %>
  <li><%= link_to "Signup", signup_path %></li>
  <li><%= link_to "Login", login_path %></li>
<% end %>
