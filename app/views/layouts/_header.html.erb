<nav>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">

    <div class="navbar-header">
      <%= link_to "Ada Cooks!", root_path, class: "navbar-brand" %>
    </div>

    <ul class="nav navbar-nav">

      <!-- Cookbooks dropdown -->
      <!-- Add logic to only show if user is logged in -->
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cookbooks<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% @cookbooks.each do |cookbook| %>
            <li><%= link_to cookbook.name.titlecase, "#" %></li>
          <% end %>
        </ul>
      </li>

      <!-- Recipes dropdown -->
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Recipes<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% @recipes.each do |recipe| %>
            <li><%= link_to recipe.name.titlecase, "#" %></li>
          <% end %>
        </ul>
      </li>

      <!-- Ingredients dropdown -->
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Ingredients<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% @ingredients.each do |ingredient| %>
            <li><%= link_to ingredient.name.titlecase, "#" %></li>
          <% end %>
        </ul>
      </li>
    </ul>

    <!-- Login/Signup Links and Buttons -->
    <ul class="nav navbar-nav navbar-right">
      <% if session[:user_id].nil?  %>
        <li><%= button_to "Login", login_path, method: :get, class: "btn btn-default navbar-btn" %></li>
        <li><%= link_to "Sign Up", new_user_path, class: "navbar-link" %></li>
      <% else %>
        <li><%= button_to "Logout", logout_path, method: :delete, class: "btn btn-default navbar-btn" %></li>
        <li><%= link_to "User Profile", user_path(session[:user_id]), class: "navbar-link" %></li>
      <% end %>
    </ul>

  </div>
</nav>
