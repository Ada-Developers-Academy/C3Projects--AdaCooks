<%= form_for [@user, @cookbook] do |f| %>
  <div class="form-group">
    <%= f.label :name, for: "cookbookName" %>
    <%= f.text_field :name, type: "name", class: "form-control", placeholder: "Name your cookbook", required: :true %>
  </div>

  <div class="form-group">
    <%= f.label :description, for: "cookbookDescription" %>
    <%= f.text_area :description, type: "description", class: "form-control", placeholder: "Description" %>
  </div>

  <hr>

  <div class="form-group">
    <div class="col-sm-2">
      <h4><i class="fa fa-cutlery"></i> Recipes</h4>
    </div>
    <div class="col-sm-3 float-right">
      <%= link_to "Create a New Recipe", new_recipe_path, class: 'btn btn-primary' %>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="button-group" role="group">
          <% @recipes.each do |recipe| %>
            <% unless @cookbook.recipes.include?(recipe) %>
              <div class="btn btn-default">
                <%= check_box_tag "cookbook[recipe_ids][]", recipe.id %>
                <%= link_to recipe.name, recipe_path(recipe.id) %>
              </div>
            <% else %>
              <div class="btn btn-default">
                <%= check_box_tag "cookbook[recipe_ids][]", recipe.id, checked = true %>
                <%= link_to recipe.name, recipe_path(recipe.id) %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= f.submit class: "btn btn-success" %>
<% end %>
<hr>
