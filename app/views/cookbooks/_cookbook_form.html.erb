<% content_for :page_title do %>
  <h2><% title %></h2>
<% end %>

<%= form_for @cookbook do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit button, class: "btn btn-success" %>

<% end %>
