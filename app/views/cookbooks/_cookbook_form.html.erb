<h2><% title %></h2>

<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <%= form_for @cookbook do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>

        <%= f.submit button, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
