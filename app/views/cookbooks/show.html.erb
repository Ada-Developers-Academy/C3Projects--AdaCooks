<h1> <%= @cookbook.name.upcase %>
<%= link_to "Edit", edit_user_cookbook_path(@authenticated_user, @cookbook), class: "btn btn-info" %>
<%= link_to "Delete", user_cookbook_path(@authenticated_user, @cookbook), method: "delete",
    class: "btn btn-warning", data: { confirm: "Are you sure you want to remove this from your cookbook?" } %>
</h1>

<h4><%= @cookbook.description %></h4>

<h3>Recipes</h3>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= render partial: 'shared/recipes_list', locals: { recipes: @recipes } %>
  </div>
</div>
