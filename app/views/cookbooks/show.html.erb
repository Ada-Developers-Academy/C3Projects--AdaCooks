<div class="container marketing">
  <h1><%= @cookbook.name %>!</h1>
  <hr class="featurette-divider">

  <h3><mark>Recipes: </mark></h3>

  <div class="row">
    <% @cookbook.recipes.each do |recipe| %>
      <div class="col-md-4">
      <% if recipe.photo_url %>
        <%= image_tag recipe.photo_url, class:"img-circle", size: "250x250" %>
      <% else %>
        <%= image_tag recipe.image_url, class:"img-circle", size: "250x250"  %>
      <% end %>
        <h2><%= recipe.name %></h2>
        <p><%= recipe.description %></p>
        <p><%= link_to "View details", recipe_path(recipe.id), class: "btn btn-default" %>
          <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this?"} %></p>
      </div>
    <% end %>
  </div>
</div>
