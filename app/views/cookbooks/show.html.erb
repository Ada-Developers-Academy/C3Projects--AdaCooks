<h1 class="cookbook-header"><%= @cookbook.name %></h1>
<ul class="media-list">
  <% @cookbook.recipes.each do |recipe| %>
    <li class="media">
      <div class="media-left media-middle">
        <%= link_to image_tag(recipe.image_url(:thumb), class: "media-object"), recipe_path(recipe.id) %>
      </div>
      <div class="media-body">
        <h5 class="media-heading"><%= link_to recipe.name, recipe_path(recipe.id) %></h5>
        <p>
          <%= recipe.desc %><br>
          <%= link_to "remove from #{@cookbook.name}", { :controller => "cookbooks", :action => "rm_recipe", :cookbook => @cookbook.id, :recipe => recipe.id }  %>
        </p>
      </div>
    </li>
  <% end %>
</ul>
