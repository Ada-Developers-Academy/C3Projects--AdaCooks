<% if session[:user_id] %>
  <div class="text-right">
    <%= link_to edit_cookbook_path(@cookbook.id), class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to cookbook_path(@cookbook.id), method: :delete, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </div>
<% end %>

<h1><%= @cookbook.name %></h1>
<p><%= @cookbook.description %></p>

<h5>Number of Recipes: </h5><%= @recipe_count %>

