<h4>Recipes from <%= @cookbook.name %></h4>
<p><%= @cookbook.description %></p>
<%= link_to "Edit Cookbook", edit_user_cookbook_path(session[:user_id], @cookbook.id), class: "btn btn-default" %>
 

  <% @recipes.each do |recipe| %>
      <tr>
        <td><%= image_tag(recipe.image.thumb) %></td>
        <td><%= link_to "#{recipe.name}", user_cookbook_recipe_path(session[:user_id], @cookbook.id, recipe.id) %></td>
        <td><%= link_to "X", remove_recipe_path(session[:user_id], recipe.id, @cookbook.id), method: :patch, class: "btn btn-danger", data: { confirm: "Are you sure you want to remove #{recipe.name}?"} %></td>
        <% if correct_user?(recipe) %>
          <td><%= link_to "Edit", edit_user_recipe_path(session[:user_id], recipe.id), class: "btn btn-default" %></td>
        <% end %>
      </tr>
  <% end %>
 