<%= form_for cookbook, url: url do |f| %>
<div class = "form-group">
  <%= f.label :name, "#{name_desc}" %>
  <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: name_placeholder %>
</div>

<div class = "form-group">
  <%= f.label :description, "#{description_desc}" %>
  <%= f.text_area :description, class: "form-control", autofocus: true, placeholder: description_placeholder %>
</div>

<div class="form-group">
  <%= f.hidden_field :user_id %>
</div>

<div class = "form-group">
  <%= f.submit submit_button, class: "btn btn-default"  %>
</div>
<% end %>
