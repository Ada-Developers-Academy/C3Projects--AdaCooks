<%= form_for @cookbook, method: method_name, class: "form" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: "form-control" %>
    <p class="field-error"><%= show_errors(@cookbook, "name") %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 2 %>
  </div>

  <%= f.submit class: "btn btn-primary", role: "button" %>
<% end %>
