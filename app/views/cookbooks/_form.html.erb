<%= form_for @cookbook, method: method_name, class: "form" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 2 %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
