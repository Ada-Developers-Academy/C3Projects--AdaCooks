<h2>My Cookbooks</h2>
<p> <%= link_to "Create a New Cookbook", new_user_cookbook_path(session[:user_id]) %></p>
<table class = "table table-hover table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Edit
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>
  <tbody>
    <% @cookbooks.alphabetize.each do |cookbook| %>
      <tr>
        <td>
          <%= link_to "#{cookbook.name}", user_cookbook_path(@user.id, cookbook.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_user_cookbook_path(session[:user_id], cookbook.id) %>
        </td>
        <td>
          <%= link_to "Delete", user_cookbook_path(cookbook.user_id, cookbook.id), :method => :delete %>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>
