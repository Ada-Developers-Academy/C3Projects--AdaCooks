<h2>My Cookbooks</h2>
<p> <%= link_to "Create a New Cookbook", new_user_cookbook_path(session[:user_id]) %></p>
<table class = "table table-hover table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Recipe Count
      </th>
      <th>
        Ingredients Used
      </th>
      <th>
        Edit
      </th>
      <th>
        Delete
      </th>
    </tr>
  </thead>
  <tbody>
    <% @cookbooks.alphabetize.each do |cookbook| %>
      <tr>
        <td>
          <%= link_to "#{cookbook.name}", cookbook_path(cookbook) %>
        </td>
        <td>
          <%= cookbook.recipes.count %>
        </td>
        <td>
          <%= cookbook.unique_ingredients %>
        </td>
        <td>
          <%= link_to "Edit", edit_cookbook_path(cookbook) %>
        </td>
        <td>
          <%= link_to "Delete", cookbook_path(cookbook), :method => :delete %>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>
