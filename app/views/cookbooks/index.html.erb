<h2>My Cookbooks</h2>

<table class = "table table-hover table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Description
      </th>
    </tr>
  </thead>
  <tbody>
    <% @cookbooks.alphabetize.each do |cookbook| %>
      <tr>
        <td>
          <%= cookbook.name %>
        </td>
        <td>
          <%= cookbook.description %>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>
