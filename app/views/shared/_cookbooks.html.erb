<h3>Cookbooks<small><%= link_to new_user_cookbook_path(@user.id) do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true" data-toggle="tooltip" title="Create a Cookbook!"></span>
<% end %></small></h3>

<% @cookbooks.each do |cookbook| %>
  <div class="media list-group">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to cookbook.name, user_cookbook_path(@user.id, cookbook.id) %>
      </h4>
      <p><%= cookbook.description %></p>
      <p>Number of Recipes: <span class="badge"><%= cookbook.recipes.count %></span></p>
      <p>Chef: <%= link_to cookbook.user.username, user_path(cookbook.user_id) %></p>
    </div>
    <% if session[:user_id] == cookbook.user_id %>
      <div class="media-right">
        <%= link_to edit_user_cookbook_path(@user.id, cookbook.id), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true" data-toggle="tooltip" title="Edit Me!"></span>
        <% end %>
        <%= link_to user_cookbook_path(session[:user_id], cookbook.id), method: :delete, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true" data-toggle="tooltip" title="Delete Cookbook!"></span>
        <% end %>
      </div>
    <% end %>
    <hr>
  </div>
<% end %>
