<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="collapse navbar-collapse">

			<%= link_to 'Lush', root_path, class: 'navbar-brand brand' %>


			<!-- recipe search -->
			<div class = "nav-search navbar-left">
				<%= form_tag({controller:'ingredients', action: 'search'}, method: "get") do %>
					<%= text_field_tag :search, params[:search], id: 'search_field', class: 'form-control', placeholder: "Search Recipes" %>
					<%= submit_tag "Search", class: 'btn btn-default btn-nav-search' %>
				<% end %>
			</div>

			<!-- login/logout -->
			<div class="navbar-right">
				<% unless session[:user_id] %>
					<%= link_to 'Login', new_session_path, class: 'btn btn-primary login' %>
				<% else %>
				<%= link_to 'My Account', user_path(session[:user_id]), class: 'nav-user-link navbar-left' %>
					<%= link_to 'Logout', session_path(session[:user_id]), method: :delete, class: 'btn btn-default logout' %>
				<% end %>

			</div>

		</div>
	</div>
</nav>
