<h1>Add an Ingredient </h1>
<% unless @recipe.nil? %>
  <h1><%= @recipe.name %></h1>
<% end %>

<%= form_for @ingredient, url: url do |f| %>
  <fieldset>
    <legend>Ingredient Details</legend>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :image %>
      <%= f.file_field :image %>
  </fieldset>

  <%= f.submit %>
<% end %>

<%= link_to "Finish creating a recipe", user_path(session[:user_id]), method: :get, class: "btn btn-default" %>

<% unless @ingredients.nil? %>
  <% @ingredients.each do |ingredient| %>
    <%= ingredient.name %>
    <%= image_tag(ingredient.image.full) %>
    <%= link_to "Remove Ingredient from Recipe", remove_ingredient_path(params[:user_id], ingredient.id, @recipe.id), method: :patch, data: {confirm: "Are you sure you want to delete #{ingredient.name}?"} %>
   
  <% end %>
<% end %>