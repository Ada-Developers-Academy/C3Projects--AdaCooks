<header>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <h1 class="navbar-brand"><%= link_to "AdaCooks", root_path %></h1>

      <div class="navbar-right">
        <% if session[:user_id].nil? %>
          <%= link_to "Sign In", new_session_path, class: "btn btn-primary" %>
          <%= link_to "Sign Up", new_user_path, class: "btn btn-primary" %>
        <% else %>
          <%= link_to @username, user_path(@username) %>
          <%= link_to "Sign Out", session_path(session[:user_id]), method: "delete", class: 'btn btn-default' %>
        <% end %>
      </div>

      <div class="navbar-right">
        <%= form_tag(recipes_path, method: :get, class: "form-inline", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search By Ingredient" %>
          <%= submit_tag "Find Recipes", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
