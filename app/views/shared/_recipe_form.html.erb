<%= form_for @recipe, url: url, method: method do |f| %>
  
  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :instructions %>
  <%= f.text_field :instructions%>

  <%= f.label :cookbooks %>
  <%= collection_select :recipe, :cookbook_ids, Cookbook.all, :id, :name, include_blank: 'no cookbook' %>

  <%= f.submit "Add Ingredients" %>
  

<% end %>


