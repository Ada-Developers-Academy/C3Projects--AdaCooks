
<%= form_for @recipe, html: {class: "form-group"}, method: :patch do |f|  %>
  <div class="form-group">
    <fieldset>
      <legend><h2>Add a Recipe!</h2></legend>
       <%= f.label :cookbooks, "Choose a Cookbook!" %><br>
       <%= collection_check_boxes(:recipe, :cookbook_ids, @cookbook, :id, :name) do |b| %>
            <%= b.label class: "checkbox-inline" do %>
              <%= b.check_box + b.text.capitalize %>
            <% end %>
          <% end %>
    </fieldset>
    <%= f.submit "Submit", class: "btn btn-default"%>
  </div>
  <% end %>
