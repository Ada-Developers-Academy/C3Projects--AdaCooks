<h2>Edit <%= @recipe.name %> </h2>

<%= form_for @recipe do |f| %>

	<%= f.hidden_field :user_id %>

	<div class="form-group">
		<%= f.label :name, 'Recipe Name' %>
		<%= f.text_field :name %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<div class="form-group">
		<%= f.label :image_url, 'Recipe Image' %>
		<%= f.file_field :image_url %>
	</div>

	<!-- ingredients -->
	<!-- how to add many ingredients? -->
	<%= f.fields_for :recipe_ingredients do |ingredients| %>
		<div class="form-group">
			<%= ingredients.label :quantity %>
			<%= ingredients.text_field :quantity %>
		</div>

		<div class="form-group">
			<%= ingredients.label :measurement %>
			<!-- measurements array -->
		</div>

		<div class="form-group">
			<%= ingredients.label :ingredient_name, "Ingredient" %>
			<%= ingredients.text_field :ingredient_name %>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :prep %>
		<%= f.text_area :prep %>
	</div>

	<div class="form-group">
		<%= f.label :cookbook_id, 'Cook Book' %>
		<%= f.collection_select(:cookbook_id, @user_cookbooks, :id, :name, include_blank: "None") %>
	</div>

	<%= f.submit "Save Recipe", class: 'btn btn-primary' %>
<% end %>
