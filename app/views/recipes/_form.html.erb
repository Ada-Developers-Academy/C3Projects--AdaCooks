<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h4>Step 1 of 2: Recipe Details (next up: Ingredients)</h4>

    <%= form_for @recipe, url: path do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
        </div>

        <div class="form-group">
          <%= f.label :steps %>
          <%= f.text_area :steps, class: "form-control", placeholder: "Steps" %>
        </div>

        <div class="form-group">
          <%= f.label "Optional Image" %>
          <%= f.file_field :avatar %>
        </div>

        <br>

        <%= f.submit "Save Recipe", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>
