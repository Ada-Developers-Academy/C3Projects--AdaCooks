<%= form_for @recipe, url: path do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :steps %>
    <%= f.text_field :steps %>

    <%= f.label "Optional Image" %>
    <%= f.file_field :avatar %>

    <%= f.submit "Save Recipe" %>
  </fieldset>
<% end %>
