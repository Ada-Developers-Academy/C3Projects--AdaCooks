<div class="container">
<h1> Recipes </h1>
  <% @recipes.each do |recipe| %>
    <div class="col-md-3 center">
      <div class="well">
        <%= link_to image_tag(recipe.image, class: "img-thumbnail", size: "200x170"), recipe_path(recipe.id) %>
        <h3><%= link_to(recipe.name, recipe_path(recipe.id)) %></h3>
        <p class="img-desc"><%= recipe.desc %></p>
        <span class="text-muted"><%= pluralize(recipe.ingredients.count, "ingredient") %></span><br>
      </div>
    </div>
<% end %>
<br>
<%= button_to "New Recipe", ingredient_index_path, method: :get, class: "btn btn-primary" %>
</div>
