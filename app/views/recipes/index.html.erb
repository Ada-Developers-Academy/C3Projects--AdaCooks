<h1>Recipes</h1>

<%= form_tag(recipes_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Recipes" %>
    <button class="btn" type="submit">Search</button>
  </div>
<% end %>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="search_result_tiles col-md-4">
      <%= link_to(image_tag(recipe.image_url(:thumb)), recipe_path(recipe.id)) %>
      <h4><%=link_to "#{recipe.name}", recipe_path(recipe.id) %></h4>
    </div>
  <% end %>
</div>
