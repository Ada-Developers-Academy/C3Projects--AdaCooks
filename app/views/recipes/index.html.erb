<div class="container marketing">
  <h1>Enjoy our best salad recipes!</h1>
  <hr class="featurette-divider">

  <div class="row">
    <% @recipes.each do |recipe|  %>
      <div class="col-lg-4">
        <% if recipe.photo_url %>
          <%= image_tag recipe.photo_url, class:"img-circle", size: "250x250" %>
        <% elsif recipe.image_url %>
          <%= image_tag recipe.image_url, class:"img-circle", size: "250x250" %>
        <% else %>
          <%= image_tag "no_image.png", class:"img-circle", size: "250x250" %>
        <% end %>
        <h2><%= recipe.name %></h2>
        <p><%= recipe.description %></p>
        <p><%= link_to "View details", recipe_path(recipe.id), class: "btn btn-default" %></p>
      </div>
    <% end %>
  </div>
</div>
