<div class="row">
  <%= "There are no recipes containing #{params[:search]}" unless @recipes.present? %>
    
  <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <!-- # TODO: Image thumbnail will go here -->
        <div class="caption">
          <h3><%= recipe.name %></h3>
          <p>Includes:
            <% recipe.ingredients.each do |ingredient| %>
              <%= link_to ingredient.name, ingredient_path(ingredient) %>
            <% end %>
          </p>
          <%= link_to "Details", recipe_path(recipe), class: "btn btn-info no-border-buttons" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
