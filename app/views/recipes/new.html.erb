<h1>Add a New Recipe</h1>

<form>
  <%= form_for @recipe  do |f| %>
    <div class="form-group">
      <%= f.label :name, for: "recipeName" %>
      <%= f.text_field :name, type: "name", class: "form-control", placeholder: "Name", required: :true %>
    </div>

    <div class="form-group">
      <%= f.label :description, for: "recipeDescription" %>
      <%= f.text_area :description, type: "description", class: "form-control", placeholder: "Description" %>
    </div>

    <div class="form-group">
      <%= f.label :preparation, for: "recipePreparation" %>
      <%= f.text_area :preparation, type: "preparation", class: "form-control", placeholder: "Preparation Instructions" %>
    </div>

    <div class="form-group">
      <%= f.label :image, 'Recipe Photo' %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <hr>

    <div class="form-group">
      <div class="col-sm-2">
        <h4>Ingredients</h4>
      </div>
      <div class="col-sm-3 float-right">
        <%= link_to "Create a New Ingredient", new_ingredient_path, class: 'btn btn-primary' %>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="button-group" role="group">
            <% @ingredients.each do |ingredient| %>
              <div class="btn btn-default">
                <%= f.check_box :ingredients, type: "checkbox" %>
                <%= link_to ingredient.name, ingredient_path(ingredient.id) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <hr>

    <div class="form-group">
      <div class="col-sm-4">
        <h4>Add To A Cookbook?</h4>
      </div>
      <div class="col-sm-3 float-right">
        <%= link_to "Create a New Cookbook", new_cookbook_path, class: 'btn btn-primary' %>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="button-group" role="group">
            <% @cookbooks.each do |cookbook| %>
              <div class="btn btn-default">
                <%= f.check_box :cookbooks, type: "checkbox" %>
                <%= link_to cookbook.name, cookbook_path(cookbook.id) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</form>
