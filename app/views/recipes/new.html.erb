<h1>New Recipe</h1>
<%= form_for @recipe, url: user_recipes_path(params[:user_id]), html: { class: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :preparation %>
    <%= f.text_area :preparation, class: "form-control" %>
  </div>

  <!-- needs ingredients fields -->
  <!-- needs option to add to cookbook -->

  <% f.hidden_field :user_id, :value => params[:user_id] %>

  <%= f.submit "Add Recipe", class: "btn btn-primary" %>
<% end %>
