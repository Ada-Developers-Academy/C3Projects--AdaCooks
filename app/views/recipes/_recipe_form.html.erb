<div class="container marketing">

  <br><% unless @recipe.errors.values == [] %>
    <div class="alert alert-danger" role="alert">
      <%= @recipe.errors.full_messages.first %>
    </div>
  <% end %><br>

  <h1><%= "#{title}" %></h1>

  <div class="form-group">
    <fieldset>
      <%= form_for @recipe do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control" %>

        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>

        <%= f.label :preparation %>
        <%= f.text_area :preparation, class: "form-control" %><br>

        <%= f.label :image, "Recipe Photo" %>
        <%= f.file_field :image %><br>

        <%= f.label :cookbook %>
        <%= f.collection_select :cookbook_id, Cookbook.user_cookbooks(@user), :id, :name, include_blank: "None" %> <%= link_to "Add a New Cookbook", new_cookbook_path %><br><br>

        <%= f.label :ingredients %> <%= link_to "Add Ingredient", new_ingredient_path %><br>
          <%= collection_check_boxes(:recipe, :ingredient_ids, Ingredient.alpha_order, :id, :name) do |b| %>
            <%= b.label class: "checkbox-inline" do %>
              <%= b.check_box + b.text.capitalize %>
            <% end %>
          <% end %><br><br>
        <%= f.submit "#{button}", class: "btn btn-primary" %>
      <% end %>
    </fieldset>
  </div>
</div>
