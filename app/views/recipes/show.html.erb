<h1><%= @recipe.name %></h1>
<% if correct_user?(@recipe) %>
  <%= link_to "Edit recipe", edit_user_recipe_path(session[:user_id], @recipe.id) %>
  <%= link_to "Delete Recipe", user_recipe_path(session[:user_id], @recipe.id), method: :delete, data: {confirm: "Are you sure you want to delete #{@recipe.name} forever?"} %>
<% end %>
<%= render partial: 'shared/select_cookbook.html.erb', locals: {url: add_recipe_path(session[:user_id], @recipe.id)} %>

<%= image_tag(@recipe.image) %> 
<%= @recipe.name %>
<%= @recipe.description %>
<%= @recipe.instructions %>

<%= link_to "#{@user.username}", user_profile_path(@user.id), method: :get %>

<h2>Ingredients</h2>

<% @recipe.ingredients.each do |ingredient| %>
  <ul>
    <li> <%= image_tag(ingredient.image) %> </li>
    <li> <%= link_to "#{ingredient.name}", ingredient_path(ingredient.id) %> </li>
  </ul> 
<% end %>




