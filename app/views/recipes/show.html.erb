  <h2><%= @recipe.name %></h2>
  <%= image_tag(@recipe.image) %>
  <h5>Description: <%= @recipe.desc %>
  <h5>Ingredients for <%= @recipe.name %></h5>
  <% @recipe.ingredients.each do |ingredient| %>
  <ul>
    <li><%= link_to "#{ingredient.name}", ingredient_path(ingredient), method: :get %></li>
  </ul>
  <% end %>
  <h5>Directions: <%= @recipe.prep %></h5>


  <% if session[:user_id] %>
    <%= button_to "Edit", edit_recipe_path(@recipe), method: :get, class: "btn btn-default" %>
  <% else %>
    <strong>Submitted by: <%= link_to @recipe.user.name, user_path(@recipe.user), method: :get %></strong>
  <% end %>
