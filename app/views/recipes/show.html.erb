<%= link_to "Edit recipe", edit_user_recipe_path(session[:user_id], @recipe.id) %>

<%= @recipe.name %>
<%= @recipe.description %>
<%= @recipe.instructions %>
<%= @recipe.image %>

<%= form_for @recipe, url: add_recipe_path(session[:user_id], @recipe.id) do |f| %>
  <%= f.label :cookbooks %>
  <%= collection_select :recipe, :cookbook_ids, Cookbook.all, :id, :name, {} %>

  <%= f.submit "Add this Recipe to a cookbook" %>
<% end %>

