<div class="page-header">
  <h2><%= @recipe.name %>
    <small> From: <%= link_to @recipe.user.username, user_path(@recipe.user.id) %></small>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <%= render partial: "ingredients_list", locals: { recipe: @recipe } %>
  </div>
</div>

<div class="row">
  <div class="col-md-10">
    <div class="panel">
      <div class="panel-header">Instructions:</div>
      <p>
        <%= @recipe.preparation %>
      </p>
    </div>
  </div>
</div>
<% if session[:user_id] == @recipe.user_id %>
  <div class="row">
    <div class="center-link-buttons">
      <%= link_to "Edit", edit_recipe_path(id: @recipe.id), class: "btn btn-info" %>
      <%= link_to "Delete", recipe_path(id: @recipe.id),
          method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
