<div class="container">

<h1>Search Results for <%= params[:search] %> </h1>
<% @recipes.each do |recipe| %>
<ul>
  <li> <%= image_tag(recipe.image_url(:thumb)) %>
    <%= link_to recipe.name, recipe_path(recipe.id) %></li>
</ul>
  <% end %>

  <%= form_tag(recipes_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Recipes" %>
        <button class="btn" type="submit"><i class="icon-search">Search</i></button>
      </div>
    <% end %>
</div>
