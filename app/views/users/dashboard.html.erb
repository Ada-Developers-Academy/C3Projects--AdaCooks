
<h1>Hello <%= @user.username %>! Welcome to your Dashboard!</h1>

<h3>Your Cookbooks:</h3>

<h3>Your Recipes:</h3>

<%= link_to "Create a New Recipe", new_user_recipe_path(params[:user_id]), class: "btn btn-default" %>

<table class="table">
  <% @recipes.each do |recipe| %>
    <tr>
      <td>  <%= link_to(image_tag(recipe.image_url(:thumb)), recipe_path(recipe.id)) %>
        <h5><%= recipe.name %></td>
      <td><%= link_to recipe.name, recipe_path(recipe.id) %></td>
      <td><%= link_to "Edit", edit_recipe_path(recipe.id), class: "btn btn-default" %></td>
      <td><%= link_to "X", recipe_path(recipe.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>

<h3>Your Ingredients: </h3>
<%= link_to "List a New Ingredient", new_ingredient_path, class: "btn btn-default" %>

<table class="table">
  <% @user.ingredients.each do |ingredient| %>
    <tr>
    <td>  <%= link_to(image_tag(ingredient.image_url(:thumb)), ingredient_path(ingredient.id)) %>
      <h5><%= ingredient.name %></td>
    <td><%= link_to ingredient.name, ingredient_path(ingredient.id) %></td>
    <td><%= link_to "Edit", edit_ingredient_path(ingredient.id), class: "btn btn-default" %></td>
    <td><%= link_to "X", ingredient_path(ingredient.id), method: :delete, class: "btn btn-danger" %></td>
  </tr>
  <% end %>
</table>
