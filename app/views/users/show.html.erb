<div class="container marketing">
  <% if session[:user_id] %>
    <h1>Welcome back, <%= @user.name %>!</h1>
    <p><%= link_to "Create a New Cookbook", new_cookbook_path, class: "btn btn-default" %>
  <% else %>
    <h1><%= @user.name %> cookbooks</h1>
  <% end %>

  <hr class="featurette-divider">

  <h3><mark>Cookbooks:</mark></h3><br>

  <div class="row">
    <% @cookbooks.each do |cookbook| %>
      <div class="col-md-4">

        <% if cookbook.photo_url %>
          <%= image_tag cookbook.photo_url, class:"img-circle", size: "220x200" %>
        <% elsif cookbook.image_url %>
          <%= image_tag cookbook.image_url, class:"img-circle", size: "220x200" %>
        <% else %>
          <%= image_tag "no_image.png", class:"img-circle", size: "220x200" %>
        <% end %>

        <h2><%= cookbook.name %></h2>
        <p>Recipes: <%= cookbook.recipes.count %> Ingredients: <%= cookbook.ingredients.count %></p>
      <div class="btn-toolbar">
        <p><%= link_to "View details", cookbook_path(cookbook.id), class: "btn btn-default" %>
        <% if session[:user_id] %>
          <%= link_to "Delete Cookbook", cookbook_path(cookbook), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this?"} %></p>
          <br>
          <br>
        <% end %>
        </div>
     </div>
    <% end %>

  </div>
</div>
