<div class="container">
  <h1>Welcome, <%= @user.username %></h1>
  <%= button_to "New Recipe", new_recipe_path %>
  <%= button_to "New Cookbook", new_cookbook_path %>

  <table class="table">
    <tr>
      <th>
        <td>photo</td>
        <td>Cookbook</td>
        <td>No. Recipes</td>
        <td>Delete</td>
      </th>
    </tr>
    <% @cookbooks.each do |cookbook| %>
      <tr>
        <td> <h3><%= cookbook.name %></h3> </td>
        <td><%= button_to "Delete", cookbook_path, method: "delete" %></td>
      </tr>
      <tr>
        <td><%= cookbook.description %></td>
        <td><%= cookbooks_recipes.cookbook_id %> ingredients</td>
      </tr>
    <% end %>
  </table>
</div>
