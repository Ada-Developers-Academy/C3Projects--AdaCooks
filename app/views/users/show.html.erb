<h1>User Profile for <%= @user.username %></h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="thumbnail">
      <%= image_tag @user.image_url(:small), alt: "User Profile Photo" %>
      <div class="caption">
        <h3><%= @user.username %></h3>
        <p>Email: <%= @user.email %></p>
      </div>
    </div>
  </div>
</div>

<div class="text-center">
    <h3>
      <% if session[:user_id] %>
        <a href="#cookbooks" <i class="fa fa-book"></a>
      <% end %>
      <a href="#recipes" <i class="fa fa-cutlery"></a>
      <a href="#ingredients" <i class="fa fa-leaf"></a>
    </h3>
</div>

  <% if session[:user_id] %>
    <h3 id="cookbooks"><i class="fa fa-book"></i> Cookbooks
      <small><%= link_to new_user_cookbook_path(@user.id) do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true" data-toggle="tooltip" title="Create a Cookbook!"></span>
        <% end %>
      </small>
    </h3>
    <%= render partial: "shared/cookbooks" %>
    <a href="#top">Back to Top</a>
  <% end %>

<h3 id="recipes"><i class="fa fa-cutlery"></i> Recipes
  <% if session[:user_id] %>
    <small><%= link_to new_recipe_path(@user.id) do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true" data-toggle="tooltip" title="Create a Recipe!"></span>
      <% end %>
    </small>
  <% end %>
</h3>
<%= render partial: "shared/recipes" %>
<a href="#top">Back to Top</a>

<h3 id="ingredients"><i class="fa fa-leaf"></i> Ingredients
  <% if session[:user_id] %>
    <small><%= link_to new_ingredient_path(@user.id) do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true" data-toggle="tooltip" title="Create an Ingredient!"></span>
      <% end %>
    </small>
  <% end %>
</h3>
<%= render partial: "shared/ingredients" %>
<a href="#top">Back to Top</a>
