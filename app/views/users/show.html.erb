<h1 class="text-center">Hello, Lovely.</h1>
<br>

<div class="col-sm-6 center-block no-float">
	<br>
	<h3> <%= @user.username %>'s Cookbooks &mdash;</h3>

	<table class="table">
		<tr>
			<th>
				Cookbook
			</th>
			<th class="text-center">
				Recipes
			</th>
			<th class="text-center">
				Ingredients
			</th>
		</tr>
		<% @user.cookbooks.each do |cookbook| %>
			<tr>
				<td>
					<%= link_to cookbook.name, cookbook_path(cookbook) %>
				</td>
				<td class="text-center">
					<span class='badge'> <%= cookbook.recipes.count %> </span>
				</td>
				<td class="text-center">
					<span class="badge"> <%= cookbook.ingredients.uniq!.count %> </span>
				</td>
			</tr>
		<% end %>
	</table>
	<%= button_to "Make a Cookbook", new_user_cookbook_path(@user), method: :get, class: 'btn btn-primary float-right' %>


	<br><br>
	<br>
	<h3> <%= @user.username %>'s Recipes &mdash;</h3>
	<div class="row">
		<ul>
			<% @user.recipes.each do |recipe| %>
				<li>
					<%= link_to recipe.name, recipe_path(recipe) %>
				</li>
			<% end %>
		</ul>
	</div>
	<%= button_to "Create a Recipe", new_recipe_path, method: :get, class: 'btn btn-primary float-right' %>
</div>
